[user]
	name = Simon Buchan
	email = simon.buchan@skilitics.com

[core]
	autocrlf = input
	whitespace = cr-at-eol
	editor = vim

[push]
	default = current

[pull]
	mode = ff-only

[alias]
	st = status --short
	co = checkout
	g = log --graph --oneline
	ga = log --graph --oneline --all
	amend = commit --amend
	b = branch

[advice]
	detachedHead = false
	pushNonFastForward = false

[color]
	ui = auto

[status]
	branch = true

[log]
	decorate = short

[mergetool]
	keepbackup = false

[merge]
	conflictstyle = diff3
	renormalize = true

[rebase]
	stat = true
	autosquash = true
	autostash = true

[column]
	ui = auto

[diff]
	mnemonicprefix = true
	submodule = log

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[include]
	path = ./.gitconfig.local
